<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_blank_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iv_no_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_cat"
            android:layout_toEndOf="@id/iv_cat"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_down_ashdark"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_blank_sub"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/ash_50"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_blank_pro"
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>