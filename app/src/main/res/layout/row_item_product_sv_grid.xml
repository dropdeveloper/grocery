    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ff4444"
            app:cardElevation="3dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="20%"/>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_cover_height"
            android:padding="10dp"
            android:clickable="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_below="@id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title" />

            <LinearLayout
                android:id="@+id/ll_l1"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/quantity_background_ash"
                android:padding="1.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="200gm"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down_ashdark"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_l2"
                android:layout_below="@+id/ll_l1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/tv_disc_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Dhs 250"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Dhs 200"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/ll_l2"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/bt_add"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/add_btn_style"
                    android:text="Add"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:id="@+id/ll_numberpick"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_remove"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_trash"/>

                    <LinearLayout
                        android:id="@+id/ll_quantity_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/quantity_background_ash"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_scroll"/>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

